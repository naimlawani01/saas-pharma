# Configuration pour le mode Electron (local/offline)
# Copier ce fichier en .env pour utiliser le backend en mode desktop

# Database SQLite locale
DATABASE_URL=sqlite:///./data/pharmacie.db

# Security (IMPORTANT: changer en production!)
SECRET_KEY=local-electron-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application
API_V1_STR=/api/v1
PROJECT_NAME=Pharmacie Manager
PROJECT_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# CORS - Autoriser les connexions depuis Electron
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:8000,file://

# Sync Settings (désactivé en mode offline)
SYNC_BATCH_SIZE=100
SYNC_CONFLICT_RESOLUTION=last_write_wins

